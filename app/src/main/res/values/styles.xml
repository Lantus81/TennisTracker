<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#8BC34A</item>
        <item name="colorPrimaryDark">#33691E</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#8BC34A</item>
        <!--<item name="titleTextColor">@android:color/white</item>-->
    </style>

    <style name="PlayerNameText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#616161</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ScoreText">
        <item name="android:textSize">56sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TableText">
        <item name="android:textSize">44sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="DeuceText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:background">@drawable/duece_rounded_corner</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="NormalBtn">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="RedBtn">
        <item name="colorButtonNormal">#ccd60000</item>
        <!--<item name="android:textColor">@android:color/white</item>-->
    </style>

</resources>